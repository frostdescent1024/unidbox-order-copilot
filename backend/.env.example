# UnidBox Order Copilot - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# AI/LLM Configuration
# ===========================================
# OpenAI API Key for AI intent parsing
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Custom LLM endpoint (if not using OpenAI)
# LLM_API_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4

# ===========================================
# WhatsApp Business API Configuration
# ===========================================
# Meta WhatsApp Business API credentials
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# Optional: Twilio WhatsApp (alternative to Meta API)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ===========================================
# Email Configuration
# ===========================================
# Email provider: smtp, sendgrid, mailgun
EMAIL_PROVIDER=smtp

# SMTP Settings (for EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SendGrid Settings (for EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun Settings (for EMAIL_PROVIDER=mailgun)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-domain.mailgun.org

# Default sender
EMAIL_FROM=orders@unidbox.com
EMAIL_FROM_NAME=UnidBox Hardware

# Admin notifications
ADMIN_EMAIL=admin@unidbox.com
ADMIN_NAME=UnidBox Admin
SEND_ADMIN_ALERTS=true
SEND_CUSTOMER_EMAILS=true

# ===========================================
# Application Settings
# ===========================================
# Server configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Product catalog path (relative to backend directory)
CATALOG_PATH=../data/unidbox_products_final.json

# ===========================================
# Database (Optional - for order persistence)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/unidbox
# DATABASE_URL=mysql://user:password@localhost:3306/unidbox
